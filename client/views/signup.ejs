<head>
    <title>
      Sign Up
    </title>
  </head>
  <body class="text-center">
    <div class="container">
        <table>
            <form method="post" action="/signup">
               <h1>Please Register</h1>
               <tr>
               <td><label for="inputName">Name</label></td>
               <td>
                <input type="text"  id="inputName" name="name"  placeholder="Enter your name" required autofocus/>
               </td>
              </tr>
             <tr>
                 <td><label for="inputEmail">Email address</label></td>
                 <td>
                   <input  type="email" id="inputEmail" name="email" placeholder="Email address" required autofocus />
                 </td>
               </tr>
               <tr>
                 <td><label for="inputPassword">Password</label></td>
                 <td>
                   <input type="password"  id="inputPassword" name="password"  placeholder="Password" required />
                 </td>
               </tr>
               <tr>
                 <td>
                   <button type="submit"> Sign Up </button>
                 </td>
               </tr>
             </form>
             <!--  Navigate to signin page -->
             <form action='/login' method='get'>
              <tr>
                <td>
                   <button>SignIn</button>
                </td>
              </tr>
             </form>
           </table>
           
    </div>
   
      <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src = "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    
  </body>
</html>





